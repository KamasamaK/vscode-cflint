{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "out",
        "rootDir": ".",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules"
    ],
    "plugins": [
        {
            "name": "typescript-tslint-plugin"
        }
    ]
}